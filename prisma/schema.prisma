generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model ApiKey {
  id        String     @id @default(cuid())
  key       String     @unique
  name      String
  email     String
  appType   AppType    @default(WEBSITE)
  createdAt DateTime   @default(now())
  requests  RoastLog[]
}

model RoastLog {
  id        String   @id @default(cuid())
  apiKeyId  String
  apiKey    ApiKey   @relation(fields: [apiKeyId], references: [id])
  theme     Theme
  heat      Int
  context   Json?
  createdAt DateTime @default(now())
}

//enums

enum AppType {
  WEBSITE
  DISCORD
  SLACK
  MOBILE_APP
}

enum Theme {
  CODING
  GAMING
  PRODUCTIVITY
  EDUCATIONAL
}
